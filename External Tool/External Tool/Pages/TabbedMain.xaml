<UserControl x:Class="External_Tool.Pages.TabbedMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:External_Tool.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl x:Name="MainTabControl">
            <TabItem Header="Texture Compress">
                <ContentControl>
                    <Frame Source="/Pages/TextureCompress.xaml"/>
                </ContentControl>
            </TabItem>
            <TabItem Header="Rename Tool">
                <ContentControl>
                    <Frame Source="/Pages/Rename.xaml"/>
                </ContentControl>
            </TabItem>
            <TabItem Header="FFMpeg Tool">
                <ContentControl>
                    <Frame Source="/Pages/FFMPegIntegrate.xaml"/>
                </ContentControl>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
