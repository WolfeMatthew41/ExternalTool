<Page x:Class="External_Tool.Pages.TextureCompress"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:External_Tool.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TextureCompress">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
            <TextBox x:Name="textureFileBox"
                   Width="500"
                   VerticalAlignment="Center"
                   Background="Gray" 
                   Foreground="White"
                   />
            <Button
            Content="Find Texture"
            Click="TextureFileSelect"
            VerticalAlignment="Center"/>
        </StackPanel>


        <Button Grid.Row="1"
            Content="Compress Texture"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="TextureCompressButtonPress"
        />

    </Grid>
</Page>
