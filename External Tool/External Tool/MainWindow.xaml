<Window x:Class="External_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:External_Tool"
        xmlns:pages="clr-namespace:External_Tool.Pages"
        mc:Ignorable="d"
        Title="External Tool" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="Texture Compress">
                <ContentControl>
                    <Frame Source="/Pages/TextureCompress.xaml"/>
                </ContentControl>
            </TabItem>
            <TabItem Header="Rename Tool">
                <ContentControl>
                    <Frame Source="/Pages/Rename.xaml"/>
                </ContentControl>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
